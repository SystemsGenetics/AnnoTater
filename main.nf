========================================================================================
*/

include { ENTAP } from './workflows/entap'

//
// WORKFLOW: Run main systemsgenetics/entap analysis pipeline
//
workflow SYSTEMSGENETICS_ENTAP {
    ENTAP ()
}

/*
========================================================================================
    RUN ALL WORKFLOWS
========================================================================================
*/

//
// WORKFLOW: Execute a single named workflow for the pipeline
// See: https://github.com/nf-core/rnaseq/issues/619
//
workflow {
    ENTAP ()
}

